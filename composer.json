{
    "name": "kwn/monolog-kafka-handler",
    "description": "Apache Kafka handler for Monolog",
    "license": "MIT",
    "keywords": ["apache", "kafka", "monolog", "handler", "rdkafka"],
    "authors": [
        {
            "name": "Karol Wnuk",
            "email": "k.wnuk@op.pl"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kwn\\Monolog\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kwn\\Monolog\\": "tests"
        }
    },
    "require": {
        "php": "^5.4|^7.0",
        "ext-rdkafka": "^0.9.1",
        "monolog/monolog": "^1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3.0",
        "mockery/mockery": "^0.9.4",
        "kwn/php-rdkafka-stubs": "^0.0.4",
        "squizlabs/php_codesniffer": "^2.6.0"
    },
    "suggest": {
        "kwn/php-rdkafka-stubs": "^0.0.4"
    }
}
